extends layout

block content
  .container-narrow
    .masthead
      ul.nav.nav-pills.pull-right
        li.active: a(href='/') Home
        li: a(data-toggle='modal', data-target='#credits') Credits
        li: include login
      h3.muted #{title}
    hr 
    .jumbotron
      h1 Welcome to Caten!
      p.lead This is the frontpage for the caten project. <br>Look around for a brief while, then join in on the fun!
      .btn-toolbar
        button.btn.btn-large.btn-success(href="#new") New game
        button.btn.btn-large.btn-primary(href="/demo") Join game
    hr
  .footer
    .container-narrow
      p.muted.credit
        a(href='http://www.github.com/betovar/caten#license',
        style='text-decoration:none;') Â© Brian Tovar 2013
  link(rel='stylesheet', href='stylesheets/homepage.css')
  include credits
  script $(document).ready(function() {$('a[rel=popover]').popover();});