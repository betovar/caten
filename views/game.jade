extends layout

append head
  link(rel='stylesheet', href='/stylesheets/game.css')
  script(src='bootstrap/js/bootstrap.min.js')
  script(src='/d3/d3.min.js')
  script(src='swipe/swipe.js')
block menu
  .navbar.navbar-inverse
    .navbar-inner
      a#game.brand(data-toggle='modal',
        data-target='#credits',
        role='button') Caten
      ul#hand.unstyled.nav.pull-right
        li: a
          span.badge.brick 0 
            i.icon-white.icon-heart(alt='Brick')
        li: a
          span.badge.lumber 0 
            i.icon-white.icon-leaf(alt='Lumber')
        li: a
          span.badge.wool 0 
            i.icon-white.icon-tint(alt='Wool')
        li: a
          span.badge.grain 0 
            i.icon-white.icon-fire(alt='Grain')
        li: a
          span.badge.ore 0 
            i.icon-white.icon-globe(alt='Ore')
block content
  .row-fluid
    .span8.offset2
      svg#board(style="height:100%;",
        type="image/svg+xml",
        viewBox="-555 -481 1110 962",
        preserveAspectRatio="xMidYMid meet")
        g#ocean
          polygon(points="275,476.3 550,0 275,-476.3 -275,-476.3 -550,0 -275,476.3")
        g#ports
        g#hexes
        g#roads
        g#settlements
  .row-fixed.carousel-seats
    ul.unstyled
      li: span.badge Seat1
      li: span.badge Seat2
      li: span.badge Seat3
      li: span.badge Seat4
  .row-fixed
    #slider.carousel.slide
      .carousel-inner
        #northwest.profile(data-index='0').item.active
          include profile
        #northeast.profile(data-index='1').item
          include profile
        #southeast.profile(data-index='2').item
          include profile
        #southwest.profile(data-index='3').item
          include profile
      a.carousel-control.left(href='slider', data-slide='prev') &lsaquo;
      a.carousel-control.right(href='slider', data-slide='next') &rsaquo;
  .container-fluid
    .navbar.navbar-inverse
      .navbar-inner
        ul#commands.unstyled.nav
          li: a(href='#play', id='devcards') Play
          li: a(href='#trade', id='trading') Trade
          li: a(href='#build', id='buying') Build
          li: a(href='#pass', id='endturn') Pass
        form#chat.navbar-search.pull-right.hidden-phone
          input.search-query(type='text',placeholder='Chat')
block license
block scripts
  script(src='/socket.io/socket.io.js')
  script(src='/gamelogic.js')
  script.
    $(document).ready(function(){
      $('#slider').carousel({ interval:2000, pause:'hover' });
    });
