extends layout

block content
  .container-fluid
    .navbar.navbar-inverse
      .navbar-inner
        a.brand(data-toggle="modal", 
          data-target="#credits",
          role="button") Settlers of Caten
        form.navbar-search.pull-right
          input.search-query(type="text",placeholder="Chat")
    .row-fluid(style="position:relative;")
      .span8.offset2
        svg#board
          g#ocean
          g#harbors
          g#hexes
          g#roads
          g#buildings
      #northwest.pull(style="left:0; top:0;")
        include stats
      #northeast.pull(style="right:0; top:0;")
        include stats
      #southeast.pull(style="right:0; bottom:0;")
        include stats
      #southwest.pull(style="left:0; bottom:0;")
        include stats
  .container-fluid
    .navbar.navbar-inverse
      .navbar-inner
        ul.unstyled.nav.pull-left
          li: a(href="#roll",onclick="rolldice()") Roll
          li: a(href="#play",id="devcards",
            data-toggle="tooltip",
            data-placement="top",
            data-html="true",
            data-trigger="click",
            title='No cards') Play
          li: a(href="#trade", id="trading",
            data-toggle="tooltip",
            data-placement="top",
            data-html="true",
            data-trigger="click",
            title='Not ready') Trade
          li: a(href="#build", id="buying",
            data-toggle="tooltip",
            data-placement="top",
            data-html="true",
            data-trigger="click",
            title='Town City') Build
          li: a(href="#pass",onclick="passdice()") Pass
        ul.unstyled.nav.pull-right
          li: a
            span.badge.badge-important 0 
              i.icon-white.icon-heart
          li: a
            span.badge.badge-success 0 
              i.icon-white.icon-leaf
          li: a
            span.badge.badge-info 0 
              i.icon-white.icon-tint
          li: a
            span.badge.badge-warning 0 
              i.icon-white.icon-fire
          li: a
            span.badge.badge-inverse 0 
              i.icon-white.icon-globe
  #credits.modal.hide.fade
    include credits