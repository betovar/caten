  thead
    tr
      th(colspan="3",style="text-align:center;")
        span.badge PLAYER
  tfoot
    tr
      td(colspan="3")
        .progress(style="margin:0;")
          .bar.bar-success(style="width:0%;")
          .bar.bar-warning(style="width:0%;")
          .bar.bar-danger(style="width:0%;")
  tbody
    tr
      td(style="text-align:center;")
        span.badge.badge-inverse 0 
          i.icon-white.icon-road(alt='Longest')
      td(style="text-align:center;")
        span.badge.badge-inverse 0 
          i.icon-white.icon-user(alt='Largest')
      td(style="text-align:center;")
        span.badge.badge-inverse 0 
          i.icon-white.icon-trash(alt='Progress')
    tr          
      td(style="text-align:center;")
        span.badge.badge-inverse 0 
          i.icon-white.icon-flag(alt='Victory')
      td(style="text-align:center;")
        span.badge.badge-inverse 0 
          i.icon-white.icon-briefcase(alt='Resources')
      td(style="text-align:center;")
        span.badge.badge-inverse 0 
          i.icon-white.icon-gift(alt='Development')